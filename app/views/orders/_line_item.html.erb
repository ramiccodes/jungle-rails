<% product = Product.find(product_id) %>
<tr>
  <td>
    <%= image_tag product.image.url, width: "100", height: "80" %>
  </td>
  <td>
    <h3><%= product.name %></h3>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= "$#{product.price}" %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= "$#{product.price * quantity}" %>
  </td>
</tr>
